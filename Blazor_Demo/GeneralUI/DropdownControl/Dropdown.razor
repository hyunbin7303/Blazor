@inherits Drowdown<TValue>

@typeparam TValue
<div class="dropdown w-100">
    <button class="btn btn-primary dropdown-toggle w-100" 
            type="button" id="dropdownMenuButton" 
            data-toggle="dropdown" aria-haspopup="true" 
            aria-expanded="false">
        @(SelectedItem == null ? "Please select something." : SelectedItem.DisplayText)
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        @foreach (var i in SelectableItems)
        {
            <a class="dropdown-item" @onclick="@(()=> OnItemClicked(i))">@i.DisplayText</a>
        }
    </div>
</div> 